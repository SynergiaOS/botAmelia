# Cerberus v4.0 Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
CERBERUS_ENVIRONMENT=development

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn-here
CERBERUS_SENTRY_ENVIRONMENT=development
CERBERUS_SENTRY_RELEASE=cerberus@4.0.0
CERBERUS_SENTRY_TRACES_SAMPLE_RATE=1.0
CERBERUS_SENTRY_DEBUG=true

# Database Configuration
CERBERUS_DATABASE_PATH=data/cerberus.db
CERBERUS_DATABASE_MAX_CONNECTIONS=10

# Trading Configuration
CERBERUS_TRADING_INITIAL_BALANCE=50.0
CERBERUS_TRADING_PAPER_TRADING=true

# Alert Configuration - Telegram
CERBERUS_ALERTS_TELEGRAM_ENABLED=false
CERBERUS_ALERTS_TELEGRAM_BOT_TOKEN=your-telegram-bot-token
CERBERUS_ALERTS_TELEGRAM_CHAT_ID=your-telegram-chat-id

# Alert Configuration - Discord
CERBERUS_ALERTS_DISCORD_ENABLED=false
CERBERUS_ALERTS_DISCORD_BOT_TOKEN=your-discord-bot-token
CERBERUS_ALERTS_DISCORD_CHANNEL_ID=your-discord-channel-id

# Alert Configuration - Email
CERBERUS_ALERTS_EMAIL_ENABLED=false
CERBERUS_ALERTS_EMAIL_SMTP_SERVER=smtp.gmail.com
CERBERUS_ALERTS_EMAIL_SMTP_USERNAME=your-email@gmail.com
CERBERUS_ALERTS_EMAIL_SMTP_PASSWORD=your-app-password
CERBERUS_ALERTS_EMAIL_FROM_ADDRESS=cerberus@yourdomain.com

# Monitoring Configuration
CERBERUS_MONITORING_ENABLE_METRICS=true
CERBERUS_MONITORING_EXPORT_ENABLE_INFLUXDB=false
CERBERUS_MONITORING_EXPORT_INFLUXDB_URL=http://localhost:8086
CERBERUS_MONITORING_EXPORT_INFLUXDB_TOKEN=your-influxdb-token
CERBERUS_MONITORING_EXPORT_INFLUXDB_ORG=your-org
CERBERUS_MONITORING_EXPORT_INFLUXDB_BUCKET=cerberus

# Logging Configuration
RUST_LOG=cerberus=debug,info
RUST_BACKTRACE=1

# Performance Tuning
NO_DEPRECATION=1
TRACE_DEPRECATION=0
